<div class="form_container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group">
      <%= f.label :username %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Username" %>
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    </div>

    <div class="field form-group">
      <%= f.label :photo, "Profile Image Url", class: 'label' %><br />
      <%= f.url_field :photo, class: "form-control", placeholder: "Profile Image Url" %>
    </div>

    <div class="field form-group">
      <%= f.label :bio, "Biography", class: 'label' %><br />
      <%= f.text_area :bio, class: "form-control", placeholder: "Biography" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions d-grid">
      <%= f.submit "Create user", class: 'btn btn-secondary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
